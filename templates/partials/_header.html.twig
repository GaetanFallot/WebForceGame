<header>
        <!--Le Header Gauche-->
    <div class="headerG">
        <img src="{{ asset('logo/logo_small_noir.png') }}" alt="logo">
    </div>

    
        <!--Le Header Droit-->
    <div class="headerD">
        <div class="nav-barre">
            <a href="{{ path('home') }}">Accueil</a>
            <a href="{{ path('charactersList') }}">Liste des personnages</a>
            <a href="#">A propos</a>
            <a href="#">Forum</a>
            <a href="#">Contact</a>
        </div>

        <div class="connexion">
            {% if app.user %}
                <a class="nav-link"> Compte : {{ app.user.userName }}</a>
                <a class="nav-link" href="{{ path('createCharacters') }}">Création personnage</a>
                <a class="nav-link" href="{{ path('user_characters') }}">Mes personnages</a>
                <a class="nav-link" href="{{ path('user_combat_list') }}">Mes combats</a>
                <a href="{{ path('app_logout') }}">Déconnexion</a>
                
                {% if app.user.role[0] == "ROLE_ADMIN" %}
                    <a href="{{ path('admin_dashboard') }}" class="co">Tableau de bord</a>

                {% endif %}
                
            {% else %}
                <a href="{{ path('app_login') }}" class="co">Connexion</a>
                <a href="{{ path('app_register') }}">Inscription</a>
            {% endif %}
        </div>
    </div>
